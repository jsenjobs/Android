<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- <item name="colorAccent">#039c00</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#eaeaea</item>
        <item name="actionOverflowMenuStyle">@style/Chaos.OverflowMenuStyle</item>
        <item name="radioButtonStyle">@style/Chaos.RadioButton</item> -->
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--
        <item name="android:activityOpenEnterAnimation">@anim/fragment_login_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/fragment_login_out_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/fragment_login_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/fragment_login_out_left</item>
        -->
        <!-- <item name="checkedTextViewStyle">@style/Chaos.ChectedTextView</item> -->
        <!-- <item name="android:windowBackground">@color/gray_light</item> -->
    </style>

    <style name="Chaos.AppTheme" parent="BaseAppTheme">

    </style>
    <style name="Chaos.FullScreen" parent="BaseAppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
    </style>


    <style name="Chaos.Weex.Confirm" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Chaos.RadioButton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <!-- <item name="background">@drawable/radio_button</item>
        <item name="android:background">@drawable/radio_button</item>
        -->
        <!-- <item name="button">@drawable/radio_button_button</item> -->
        <item name="android:button">@drawable/radio_button_button</item>
    </style>
    <style name="Chaos.Img.CheckBox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="background">@drawable/check_box_image</item>
    </style>
    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:width">12dp</item>
        <item name="android:height">12dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:left">0dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Chaos.PopupWindow" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--<item name="android:colorBackground">#000000</item> 也可以设置背景色以及menu中的其他属性-->
    </style>

    <style name="Chaos.OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@color/splash_back</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">0dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gradientRadius">15dp</item>
        <item name="android:radius">50dp</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/main_back_light</item>
    </style>
</resources>
